{
  "name": "typescript-empty-project",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "test": "jest",
    "start": "ts-node  src/main.ts",
    "start:dev": "nodemon --config nodemon-debug.json",
    "test:cov": "jest --coverage",
    "build": "tsc"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "ts-node": "^8.4.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.8",
    "jest": "^24.9.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.3"
  }
}
